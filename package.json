{
    "name": "chrismavrommatis",
    "version": "1.0.0",
    "description": "Personal site",
    "scripts": {
        "serve" : "npm run jekyll-serve-ssl",
        "jekyll-serve": "cd src && bundle exec jekyll serve --trace",
        "jekyll-serve-ssl": "cd src && bundle exec jekyll serve --trace --ssl-cert  _ssl/localhost.crt --ssl-key _ssl/localhost.key",
        "install-all": "bundle install",
        "clean-node": "rm -f package-lock.json && rm -rf node_modules",
        "clean-jekyll": "rm -rf _site && rm -f Gemfile.lock",
        "uninstall-all": "npm run clean-node && npm run clean-jekyll",
        "generate-ssl": "sh config/certificate_generation/run.sh"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ChrisMavrommatis/chrismavrommatis.github.io"

    },
    "keywords": [
        "personal site",
        "blog"
    ],
    "author": {
        "name": "Chris Mavrommatis"
    },
    "license": "DUAL LICENSE, SEE LICENSE",
    "devDependencies": {}

}